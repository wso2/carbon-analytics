<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wso2.carbon.analytics</groupId>
        <artifactId>org.wso2.carbon.analytics.parent</artifactId>
        <version>2.0.105-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>org.wso2.carbon.stream.processor.idp.client</artifactId>
    <packaging>bundle</packaging>

    <name>WSO2 Stream Processor - IdP Clients</name>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
        </dependency>

        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.eclipse.osgi</groupId>
            <artifactId>org.eclipse.osgi.services</artifactId>
        </dependency>

        <dependency>
            <groupId>org.wso2.msf4j</groupId>
            <artifactId>msf4j-core</artifactId>
        </dependency>

        <dependency>
            <groupId>io.github.openfeign</groupId>
            <artifactId>feign-core</artifactId>
        </dependency>
        <dependency>
            <groupId>io.github.openfeign</groupId>
            <artifactId>feign-gson</artifactId>
        </dependency>

        <dependency>
            <groupId>com.googlecode.json-simple.wso2</groupId>
            <artifactId>json-simple</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <basedir>${project.build.outputDirectory}/org/wso2/carbon/stream/processor.idp/client</basedir>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>
                                org.wso2.carbon.stream.processor.idp.client.core.internal.IdPClientServiceComponent
                            </mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <private.package>org.wso2.carbon.stream.processor.idp.client.core.internal,</private.package>
        <export.package>
            !org.wso2.carbon.stream.processor.idp.client.core.internal,
            org.wso2.carbon.stream.processor.idp.client.*,
            feign.*,
            org.json.simple.*
        </export.package>
        <import.package>
            feign.*,
            feign.gson.*;version="${feign.version}",
            org.json.simple.*,
            org.osgi.framework.*;version="${osgi.framework.import.version.range}",
            org.wso2.carbon.config.*;version="${carbon.config.version.range}",
            org.wso2.carbon.kernel.*;version="${carbon.kernel.package.import.version.range}",
            *;resolution:=optional
        </import.package>
        <dynamic.import.package>*</dynamic.import.package>
        <carbon.component>
            startup.listener;
            componentName="sp-idp-service";
            requiredService="org.wso2.carbon.stream.processor.idp.client.core.spi.IdPClientInitializer",
            osgi.service;
            objectClass="org.wso2.carbon.stream.processor.idp.client.core.spi.IdPClientInitializer"
        </carbon.component>
    </properties>
</project>
