<eventReceiver name="textreceiver" traceEnabled="true" xmlns="http://wso2.org/carbon/eventreceiver">
    <from eventAdapterName="emailEventAdapter" eventAdapterType="email">
        <property name="email.in.subject">TestEmailService</property>
    </from>
    <mapping type="text">
        <property>
            <from regex="(\w+)\sin\s(\w+)"/>
            <to name="person" type="string"/>
            <to name="location" type="string"/>
        </property>
        <property>
            <from regex="USD\s(\d*\.\d{2})"/>
            <to name="amount" type="double"/>
        </property>
    </mapping>
    <to streamName="correlationStream" version="1.4.0"/>
</eventReceiver>
