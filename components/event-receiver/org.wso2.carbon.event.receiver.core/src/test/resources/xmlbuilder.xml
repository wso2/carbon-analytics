<eventReceiver name="xmlreceiver" xmlns="http://wso2.org/carbon/eventreceiver">
    <from eventAdapterType="ws-event-local" eventAdapterName="localEventAdapter">
        <property name="topic">AllStockQuotes</property>
    </from>
    <mapping type="xml" parentXpath="//quotedata:AllStockQuotes">
        <xpathDefinition prefix="quotedata" namespace="http://ws.cdyne.com/"/>
        <property>
            <from xpath="//quotedata:StockQuoteEvent/quotedata:LastTradeAmount"/>
            <to name="price" type="double"/>
        </property>
        <property>
            <from xpath="//quotedata:StockQuoteEvent/quotedata:StockSymbol"/>
            <to name="symbol" type="string"/>
        </property>
    </mapping>
    <to streamName="stockQuotes" version="1.0.0"/>
</eventReceiver>
