<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>bam2</artifactId>
        <version>4.3.0-SNAPSHOT</version>
	<relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.bam.gadgetgenwizard.ui</artifactId>
    <packaging>bundle</packaging>
    <version>4.3.0-SNAPSHOT</version>
    <name>WSO2 Carbon - BAM Gadget Gen Wizard UI</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>
          <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>

                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <!--<Bundle-Activator>org.wso2.carbon.bam2.core.internal.Activator</Bundle-Activator>-->
                        <!--<Axis2RequiredServices>org.wso2.carbon.bam2.core.deployment.bam2DeploymentInterceptor</Axis2RequiredServices>-->

                        <Private-Package>
                            org.wso2.carbon.bam.gadgetgenwizard.ui.internal
                        </Private-Package>
                        <Export-Package>
                            org.wso2.carbon.bam.gadgetgenwizard.ui.*
                        </Export-Package>
                        <Import-Package>
                           org.json.*;version="${orbit.version.json}",
                            *;resolution:=optional
                        </Import-Package>
                        <Carbon-Component>UIBundle</Carbon-Component>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>target/generated-code/src</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

   <dependencies>

       <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.ui</artifactId>
            <version>${wso2carbon.version}</version>
        </dependency>
       <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.bam.gadgetgenwizard.stub</artifactId>
            <version>${wso2carbon.version}</version>
        </dependency>
       <dependency>
           <groupId>org.json.wso2</groupId>
           <artifactId>json</artifactId>
           <version>${orbit.version.json}</version>
       </dependency>

   </dependencies>

</project>
