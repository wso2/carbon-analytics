<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>analytics-io-feature</artifactId>
        <groupId>org.wso2.carbon.analytics</groupId>
        <version>1.3.18-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.analytics.api.server.feature</artifactId>
    <name>WSO2 Carbon - Analytics API Server Feature</name>
    <description>This feature contains the aggregateFunction core bundles required for analytics api client functionality</description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon.analytics</groupId>
            <artifactId>org.wso2.carbon.analytics.io.commons</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics</groupId>
            <artifactId>org.wso2.carbon.analytics.dataservice.commons</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics</groupId>
            <artifactId>org.wso2.carbon.analytics.datasource.commons</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics</groupId>
            <artifactId>org.wso2.carbon.analytics.servlet</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.commons</groupId>
            <artifactId>org.wso2.carbon.identity.authentication</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.analytics.api.server</id>
                            <propertiesFile>../../etc/feature.properties</propertiesFile>
                            <bundles>
                                <bundleDef>
                                    org.wso2.carbon.analytics:org.wso2.carbon.analytics.io.commons
                                </bundleDef>
                                <bundleDef>org.wso2.orbit.org.apache.httpcomponents:httpclient</bundleDef>
                                <bundleDef>org.wso2.carbon.analytics:org.wso2.carbon.analytics.dataservice.commons</bundleDef>
                                <bundleDef>org.wso2.carbon.analytics:org.wso2.carbon.analytics.datasource.commons</bundleDef>
                                <bundleDef>org.wso2.carbon.analytics:org.wso2.carbon.analytics.servlet</bundleDef>
                                <bundleDef>org.wso2.carbon.commons:org.wso2.carbon.identity.authentication</bundleDef>
                            </bundles>
                            <importFeatures>
                                <importFeatureDef>org.wso2.carbon.core:${carbon.kernel.version}</importFeatureDef>
                                <importFeatureDef>org.wso2.carbon.analytics.core.server:${carbon.analytics.version}</importFeatureDef>
                            </importFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>