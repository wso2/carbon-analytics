<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-service-stubs</artifactId>
        <version>4.3.0-SNAPSHOT</version>
	<relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.dashboard.stub</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Dashboard Stub</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <id>source-code-generation</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <path id="wsdl2java.classpath">
			 <pathelement location="${settings.localRepository}/org/apache/ws/commons/axiom/wso2/axiom/${orbit.version.axiom}/axiom-${orbit.version.axiom}.jar"/>
                                    <pathelement
                                            location="${settings.localRepository}/org/apache/axis2/wso2/axis2-client/${orbit.version.axis2}/axis2-client-${orbit.version.axis2}.jar"/>
                                    <pathelement
                                            location="${settings.localRepository}/org/apache/axis2/wso2/axis2/${orbit.version.axis2}/axis2-${orbit.version.axis2}.jar"/>
                                </path>
                                <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true">
                                    <arg line="-uri src/main/resources/DashboardService.wsdl -u -uw -o target/generated-code -p org.wso2.carbon.dashboard.stub -ns2p http://utils.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://util.java/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://dashboard.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://org.apache.axis2/xsd=org.wso2.carbon.dashboard.stub.types.axis2,http://org.wso2.wsf/tools=org.wso2.carbon.dashboard.stub.types.tools,http://bean.dashboard.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.bean,http://bean.common.dashboard.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.bean"/>
                                    <classpath refid="wsdl2java.classpath"/>
                                </java>
                                <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true">
                                    <arg line="-uri src/main/resources/GadgetContentService.wsdl -u -uw -o target/generated-code -p org.wso2.carbon.dashboard.stub.resource 
                                    -ns2p http://utils.services.resource.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.resource.services.utils.xsd,http://common.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.resource.common.xsd,http://beans.resource.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.resource.beans.xsd,http://services.resource.registry.carbon.wso2.org=org.wso2.carbon.dashboard.stub.resource.services,http://util.java/xsd=org.wso2.carbon.dashboard.stub.resource.util,http://dashboard.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://org.wso2.wsf/tools=org.wso2.carbon.dashboard.stub.types.tools,http://core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://handlers.jdbc.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://dataaccess.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://jdbc.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://dao.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://session.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://utils.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://queries.jdbc.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd,http://config.core.registry.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.registry.core.xsd"/>
                                    <classpath refid="wsdl2java.classpath"/>
                                </java>
                                <java classname="org.apache.axis2.wsdl.WSDL2Java" fork="true">
                                    <arg line="-uri src/main/resources/DashboardUtilService.wsdl -u -uw -o target/generated-code -p org.wso2.carbon.dashboard.stub -ns2p http://utils.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://util.java/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://dashboard.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.carbon,http://org.apache.axis2/xsd=org.wso2.carbon.dashboard.stub.types.axis2,http://org.wso2.wsf/tools=org.wso2.carbon.dashboard.stub.types.tools,http://bean.dashboard.carbon.wso2.org/xsd=org.wso2.carbon.dashboard.stub.types.bean"/>
                                    <classpath refid="wsdl2java.classpath"/>
                                </java>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>
                                    target/generated-code/src
                                </source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>org.wso2.carbon.dashboard.stub.registry</Private-Package>
                        <Export-Package>
                            org.wso2.carbon.dashboard.stub.*; version=4.0.0,
                        </Export-Package>
                        <Import-Package>
                            *;resolution:=optional
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <Carbon-Component>UIBundle</Carbon-Component>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.axis2.wso2</groupId>
            <artifactId>axis2</artifactId>
        </dependency>
    </dependencies>

</project>
